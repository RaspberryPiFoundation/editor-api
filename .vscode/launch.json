{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "ruby_lsp",
      "name": "Debug Ruby file",
      "request": "launch",
      "program": "ruby ${file}",
    },
    {
      "type": "ruby_lsp",
      "request": "launch",
      "name": "Debug RSpec file",
      "program": "bundle exec rspec ${relativeFile}"
    },
    {
      "type": "ruby_lsp",
      "request": "launch",
      "name": "Debug current RSpec test",
      "program": "bundle exec rspec ${relativeFile}:${lineNumber}"
    },
    {
      "type": "ruby_lsp",
      "request": "attach",
      "name": "Attach to existing server",
    },
  ],
}
